    <main>
      <section class="container formulario display-none" id="form-new">
        <div style="margin-bottom: 1em;">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="btn-close"
            onclick="Utils.ocultarFormulario('#form-new', 'display-none', true)">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>


        <form method="POST" action="/admin/produtos">
          <input type="hidden" id="id" name="id">
          <div class="form-row">
            <div class="form-group col-md-2">
              <label for="image" class="caixaImg">
                <input type="file" hidden name="image" id="image">
                <img src="./../images/images/SemImagem-300x300px.png" alt="Imagem" class="imagem rounded-circle"
                  id="imagem-produto">
                <div class="sobreposicao">
                  <h5 class="texto">Adicionar Imagem</h5>
                  <span class="icone"><i class="fas fa-chevron-circle-up"></i></span>
                </div>
              </label>
            </div>


            <div class="form-group col-md-4">
              <label for="description"><strong>Descrição</strong></label>
              <input type="text" class="form-control" id="description" name="description">
            </div>

            <div class="form-group col-md-4">
              <label for="category"><strong>Categoria</strong></label>
              <select class="form-control" id="category" name="category">
                <option selected>Selecione...</option>
                <option>Frutas</option>
                <option>Verduras</option>
              </select>
            </div>

            <div class="form-group col-md-2">
              <label for="salePrice"><strong>Preço</strong></label>
              <input type="number" class="form-control" id="salePrice" name="salePrice">
            </div>

            <div class="form-group col-md-3">
              <label for="unitMeansure"><strong>Und. Medida</strong></label>
              <select id="unitMeansure" class="form-control" name="unitMeansure">
                <option selected>Selecione...</option>
                <option>Kg</option>
                <option>Pacote</option>
                <option>Litro</option>
                <option>Libra</option>
              </select>
            </div>


            <div class="form-group col-md-3">
              <label for="productType"><strong>Tipo de Produto</strong></label>
              <select id="productType" class="form-control" name="productType">
                <option selected>Selecione...</option>
                <option>Produtos Especiais</option>
                <option>Produto Normal</option>
              </select>
            </div>

            <div class="form-group col-md-3">
              <label for="multiplyFactor"><strong>Fator Multiplicador</strong></label>
              <input type="number" class="form-control" id="multiplyFactor" name="multiplyFactor">
            </div>

            <div class="form-group col-md-3">
              <label for="status"><strong>Status</strong></label>
              <select id="status" class="form-control" name="status">
                <option selected>Selecione...</option>
                <option value="1">Ativo</option>
                <option value="0">Bloqueado</option>
              </select>
            </div>

            <div class="form-group col-md-6">
              <label for="productSuppliers"><strong>Fornecedor</strong></label>
              <select class="mdb-select md-form form-control" id="productSuppliers" multiple size="5"
                name="productSuppliers">
                <option value="1">Joao Fazenda Horte</option>
                <option value="2">Tião Jose Hortal</option>
                <option value="3">Joaquina Horte e Lim</option>
                <option value="4">Joaquim da Silva</option>
                <option value="5">Jalozim da Horta</option>
              </select>
            </div>

            <div class="form-group col-md-6">
              <label for="nutrictionInformation"><strong>Informações Nutricionais</strong></label>
              <textarea class="form-control" id="nutrictionInformation" rows="5"
                name="nutrictionInformation"></textarea>
            </div>

          </div>
          <div class="botoes-a-direita">
            <button type="reset" class="btn btn-success btn-cancelar">Cancelar</button>
            <button type="submit" class="btn btn-primary botao-salvar">Salvar</button>
          </div>
          </div>
        </form>
      </section>



      <script src="./../javascripts/js/script-formsave.js"></script>
      <script>
        let form = document.querySelector('main form');

        form.save().then(json => {

          window.location.reload();

        }).catch(err => {

          console.log(err);

        });
      </script>


      <section class="container list-itens-container table-responsive-md">
        <div class="navbar navbar-light">
          <h6 class="navbar-brand">
            Lista de Produtos
          </h6>
        </div>

        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th scope="col">Imagem</th>
              <th scope="col">Descrição</th>
              <th scope="col">Preço</th>
              <th scope="col">Tipo</th>
              <th scope="col">Status</th>
              <th scope="col" class="col-small">Excluir</th>
              <th scope="col" class="col-small">Editar</th>
            </tr>
          </thead>
          <tbody>
            <% produtos.forEach(function(row){ %>
            <tr data-row="<%= JSON.stringify(row)%>">
              <th scope="row"><%=row.id%></th>
              <td><%=row.description%></td>
              <td><%=row.salePrice%></td>
              <td>Especiais</td>
              <td>Ativo</td>
              <td>
                <button class="btn btn-excluir"><i class="fas fa-trash-alt"></i></button>
              </td>
              <td>
                <button class="btn btn-editar" onclick="Utils.exibirFormulario('#form-new', 'display-none')"><i
                    class="fa fa-pencil-alt"></i></button>
              </td>
            </tr>

          </tbody>
        </table>
      </section>
    </main>

    <script>
      let buttonsEdit = document.querySelectorAll('.btn-editar');
      let buttonsDelete = document.querySelectorAll('.btn-excluir');

      let mainForm = document.querySelector('main form');
      for (let btn of buttonsEdit) {
        btn.addEventListener('click', function (e) {
          let tr = e.path.find(elemento => {
            return (elemento.tagName.toUpperCase() == 'TR');
          });

          let data = JSON.parse(tr.dataset.row);

          for (let name in data) {
            switch (name) {
              case 'image':
                mainForm.querySelector('img').src = '/' + data[name];
                break;
              default:
                let input = mainForm.querySelector(`[name=${name}`);
                if (input) input.value = data[name];
            }
          }
        });
      }

      for (let btn of buttonsDelete) {
        btn.addEventListener('click', function (e) {
          let tr = e.path.find(elemento => {
            return (elemento.tagName.toUpperCase() == 'TR');
          });

          let data = JSON.parse(tr.dataset.row);

          fetch(`/admin/produtos/${data.id}`, {
              method: 'POST'
            }).then(response => response.json())
            .then(json => {
              window.location.reload();
            })
        });
      }
    </script>